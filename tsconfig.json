{
  "include": ["src/*"],
  "exclude": ["node_modules", "website"],
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": false,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es6",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "types": ["react"],
    "rootDir": "src",
    "outDir": "dist",
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "declarationDir": "dist/types"
  }
}
